</a>*@
@using (Html.BeginForm("AddToShoppingCart", "ShoppingCart", FormMethod.Post))
{
    @Html.Hidden("id", Model.DetailsProduct.ProductID)
    @Html.TextBox("quantity",Model.CountOfProduct=1,  new { type = "number", min = "1", max = "12"})
    
    
    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
    

    
    <input type="submit" class="btn btn-success" value="Dodaj do koszyka" />
}
<div>
    @string.Format("{0:0.##}", Model.DetailsProduct.Price)<span>PLN</span> 
</div>
<div >
    @Model.DetailsProduct.Description
</div>


