@model TechCom.App.Models.ShoppingCartViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ilość</th>
            <th>Produkt</th>
            <th class="text-right">Cena</th>
            <th class="text-right">Wartość</th>
        </tr>
    </thead>
    <tbody>
      
        @foreach (var line in Model.ShoppingCartManager.ContentOfCart)
        {
         
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Product.Name</td>
                <td class="text-right">@line.Product.Price.ToString("c")</td>
                <td class="text-right">@((line.Quantity * line.Product.Price).ToString("c"))</td>
                <td><a href="@Url.Action("RemoveFromShoppingCart","ShoppingCart", new {id=line.Product.ProductID,returnUrl=Request.Url.PathAndQuery})">
                    <input type="submit" class="btn btn-danger" value="Usuń" />
                </a>
                </td>
            
            </tr>
           
        }

    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Razem:</td>
            <td class="text-right">
                @Model.ShoppingCartManager.WorthOfProduct().ToString("c")
            </td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-primary" href="@Url.Content("~/")">Kontynuuj zakupy</a>
    @Html.ActionLink("Realizuj zamówienie", "MakeAnOrder",null,new { @class="btn btn-primary" })
</div>