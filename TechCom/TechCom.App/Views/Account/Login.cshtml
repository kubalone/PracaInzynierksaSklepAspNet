
@using TechCom.Model.Domain.ViewModels
@model TechCom.Model.Domain.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutWithoutSearch.cshtml";
}

<div class="col-md-4 col-md-offset-4  col-sm-7 col-sm-offset-3  col-xs-12 contact-form">
    <h4 class="white-w3ls"><span>Zaloguj</span></h4>

   @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new {  role = "form" }))
   {

        <div class="styled-input agile-styled-input-top">
            @Html.TextBoxFor(m => m.Email)
           
          
            <label>Email</label>
            <span></span>
        </div>
        <div class="styled-input">
            @Html.PasswordFor(m => m.Password)
           
            <label>Hasło</label>
            <span></span>
        </div>
        <div class="styled-input">
            @Html.CheckBoxFor(m => m.RememberMe,new { id="remeberMe"})
            
            <label>Zapamiętaj mnie</label>
            <span></span>
        </div>
        <input type="submit" value="Zaloguj">
    <div class="clearfix"> </div>
        @Html.AntiForgeryToken()
       
        
        @Html.ValidationSummary("", new { @class = "text-danger" })
    }
</div>
<div class="clearfix"> </div>
