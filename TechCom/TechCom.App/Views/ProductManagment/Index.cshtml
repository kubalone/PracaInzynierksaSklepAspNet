@using PagedList.Mvc;
@using PagedList; 
@model IPagedList <TechCom.Model.Domain.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel-body">
    <h2 id="h2ProductManagment">
        Zarządzanie produktami
    </h2>
   
        @using (Html.BeginForm())
        {
            <div class="form-inline" id="formProductManagment">
            
                    <input id="SearchString" name="SearchString" type="search" placeholder="czego szukasz?" @ViewBag.CurrentFilter as string class="form-control " />

                    <button type="submit" value="Search" class="btn btn-primary"><i class="glyphicon glyphicon-search"> Wyszukaj</i> </button>
             
                </div>
        }
        <a href="@Url.Action("Edit", "ProductManagment")" class="btn btn-success btn-md" id="addProductManagment">+ Dodaj nowy produkt</a>

        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="col-md-0.5">ID</th>
                <th class="col-md-2">Nazwa</th>
                <th class="col-md-1">Nazwa Kategorii</th>
                <th class="col-md-6">Opis</th>
                <th class="col-md-1">Cena</th>
                <th class="col-md-1.1 text-center">Akcja</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(models => item.ProductID)
                    </td>
                    <td>
                        @Html.DisplayFor(models => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(models => item.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(models => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(models => item.Price)
                    </td>
                    <td class="text-center">

                        <a href="@Url.Action("Edit", "ProductManagment",new { idProduct = item.ProductID })" class="btn btn-warning btn-sm " id="btnEdit">Edytuj</a>
                        <a href="@Url.Action("Delete", "ProductManagment",new { idProduct = item.ProductID })" class="btn btn-danger btn-sm">Usuń</a>

                    </td>
                </tr>
            }
        </table>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
    </div>

