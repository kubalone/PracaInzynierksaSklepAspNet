@model TechCom.App.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}
<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <a href="@Url.Action("ListOfOrder","Manage")">Lista zamówień</a>
    <h4>Change your account settings</h4>

    @using (@Html.BeginForm("ChangeProfile", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <table id="checkout-address-table">
            <tr>
                <td>@Html.LabelFor(o => o.UserData.Name, "Name:")</td>
                <td>@Html.TextBoxFor(o => o.UserData.Name)</td>
                @*<td>@Html.ValidationMessageFor(o => o.UserData.Name)</td>*@
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.UserData.Surname, "Surname")</td>
                <td>@Html.TextBoxFor(o => o.UserData.Surname)</td>
                @*<td>@Html.ValidationMessageFor(o => o.UserData.Surname)</td>*@
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.UserData.Adress, "Adress")</td>
                <td>@Html.TextBoxFor(o => o.UserData.Adress)</td>
                @*<td>@Html.ValidationMessageFor(o => o.UserData.Adress)</td>*@
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.UserData.City, "City")</td>
                <td>@Html.TextBoxFor(o => o.UserData.City)</td>
                @*<td>@Html.ValidationMessageFor(o => o.UserData.City)</td>*@
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.UserData.ZipCode, "ZipCode")</td>
                <td>@Html.TextBoxFor(o => o.UserData.ZipCode)</td>
                @*<td>@Html.ValidationMessageFor(o => o.UserData.ZipCode)</td>*@
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.UserData.Phone, "Phone number")</td>
                <td>@Html.TextBoxFor(o => o.UserData.Phone)</td>
                @*<td>@Html.ValidationMessageFor(o => o.UserData.Phone)</td>*@
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.UserData.Email, "Email adress")</td>
                <td>@Html.TextBoxFor(o => o.UserData.Email)</td>
                @*<td>@Html.ValidationMessageFor(o => o.UserData.Email)</td>*@
            </tr>

        </table>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Make an order" />
        </div>

    }
    <hr />

    <hr />

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Change Password Form</h4>
        <hr />

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.ChangePasswordViewModel.OldPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ChangePasswordViewModel.OldPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ChangePasswordViewModel.NewPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ChangePasswordViewModel.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ChangePasswordViewModel.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ChangePasswordViewModel.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change password" class="btn btn-default" />
            </div>
        </div>
    }

