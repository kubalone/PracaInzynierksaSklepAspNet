<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sklep TechCom</title>
    @Styles.Render("~/bundles/css")


    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800" rel="stylesheet">
    <link href='//fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,900,900italic,700italic' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="header" id="home">
        <div class="container">
            <ul class="col-xs-12" id="homeList">
                <li class="col-xs-3"><i class="glyphicon glyphicon-phone" id="main" aria-hidden="true"></i><span class="hidden-xs"> Kontakt</span></li>
                @Html.Action("Cart", "ShoppingCart")
                @Html.Partial("_LoginPartialView")
            </ul>
        </div>
    </div>

    <div class="header-bot">
        <div class="header-bot_inner_wthreeinfo_header_mid">
            <div class="col-md-4 logo_agile">
                <h1><a href="@Url.Action("Index","Home")"><span>T</span>ech Com </a></h1>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="ban-top">
        <div class="container">
            <div class="top_nav_left">
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                       
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                     
                        <div class="collapse navbar-collapse menu--shylock" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav menu__list">
                                <li class="menu__item"><a class="menu__link" href="@Url.Action("Index","Manage")">Twoje konto</a></li>
                                <li class="menu__item "><a class="menu__link" href="@Url.Action("ListOfOrder","Manage")">Lista zamówień</a></li>
                                    @if (@User.IsInRole("Admin"))
                                    {
                                        <li class="menu__item"><a class="menu__link"  href="@Url.Action("Index", "ProductManagment")">Zarządzanie produkatami</a></li>
                                    }
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
         
          
        </div>
     
    </div>
 
    <div class="content">
        
        @RenderBody()
    </div>
    <footer class="footer ">

        <div class="footerLink col-md-12 col-sm-12 col-xs-12">

            <div class="col-md-3 col-md-offset-1  col-sm-3  col-xs-4">
                <h4><a href="index.html">Informacje </a></h4>
            </div>
            <div class="col-md-3 col-sm-3 col-xs-4">
                <h4><a href="index.html">Kontakt</a></h4>

            </div>
            <div class="col-md-3 col-sm-3 col-xs-4">
                <h4><a href="index.html">Regulamin</a></h4>

            </div>

            <div class="lastLink col-md-2 col-sm-3 col-xs-4">
                <h4><a href="index.html">Pomoc </a></h4>
            </div>
        </div>
        <p>&copy 2017/2018 TechCom. Design by <span id="name">  Jakub Kubala</span></p>

    </footer>


   

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

  
    @RenderSection("scripts", required: false)
</body>
</html>
