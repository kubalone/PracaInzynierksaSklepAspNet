<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sklep TechCom</title>
    @Styles.Render("~/bundles/css")

   
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800" rel="stylesheet">
    <link href='//fonts.googleapis.com/css?family=Lato:400,100,100italic,300,300italic,400italic,700,900,900italic,700italic' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="header" id="home">
        <div class="container">
            <ul class="col-xs-12" id="homeList">
                <li class="col-xs-3"><i class="glyphicon glyphicon-phone" id="main" aria-hidden="true"></i><span class="hidden-xs"> Kontakt</span></li>
                @Html.Action("Cart", "ShoppingCart")
                @Html.Partial("_LoginPartialView")
            </ul>
        </div>
    </div>

    <div class="header-bot">
        <div class="header-bot_inner_wthreeinfo_header_mid">
            <div class="col-md-4 logo_agile">
                <h1><a href="@Url.Action("Index","Home")"><span>T</span>ech Com </a></h1>
            </div>
            <div class="col-md-4 header-middle">

                @using (Html.BeginForm("SearchProduct", "Product"))
                {
                    <input type="search" name="SearchString" placeholder="Czego szukasz?" required="" value="@ViewBag.CurrentFilter">
                    <button type="submit">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                }


                @*<form action="@Url.Action("SearchProduct","Product")" method="post">
                        <input type="search" name="search" placeholder="Czego szukasz?" required="" @ViewBag.CurrentFilter as string>
                        <button type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>

                    </form>*@
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div class="content">
        @RenderBody()

    </div>



    <footer class="container-fluid">
        <nav class="navbar fixed-bottom">


            <p>&copy 2017/2018 TechCom. Design by <span id="name">  Jakub Kubala</span></p>

  
    </nav>
    </footer>

    @Scripts.Render("~/bundles/modernizr")


    @Scripts.Render("~/bundles/jquery")

</body>

</html>
